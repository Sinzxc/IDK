<Window x:Class="WpfApp2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:WpfApp2.ViewModel"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Order by name" Command="{Binding OrderByName}"></Button>
                <TextBox x:Name="tb1" Width="200" ></TextBox>
                <Button Content="Поиск" Command="{Binding Search}"></Button>
                <Button Content="Вывести всё" Command="{Binding GetDefault}"></Button>
            </StackPanel>
            <ListView ItemsSource="{Binding Users}" MouseDown="ListView_MouseDown">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel MouseDown="StackPanel_MouseDown" Width="768">
                            <TextBlock Text="{Binding Name}" MouseDown="TextBlock_MouseDown"></TextBlock>
                            <TextBlock Text="{Binding Username}"></TextBlock>
                            <TextBlock Text="{Binding Password}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
